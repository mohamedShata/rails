<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Number</th>
    <th>Img</th>
    <th>Capacity</th>
    <th>Hotel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.title %></td>
    <td><%= room.number %></td>
    <td><%= room.img %></td>
    <td><%= room.capacity %></td>
    <td><%= room.hotel %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

