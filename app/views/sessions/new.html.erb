<h1>Sign in</h1>
<%= form_tag({controller: "sessions", action: "create"}, method: "post") do %>
	<div class="field">
		<%= label_tag(:email, "Email:") %><br>
		<%= text_field_tag(:email) %>
	</div>
	<div class="field">
		<%= label_tag(:password, "Password:") %><br>
		<%= password_field_tag(:password) %>
	</div>
	<%= submit_tag("Sign in") %>
<% end %>
new user? <a href="/signup"> sign up </a>



