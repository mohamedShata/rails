<h1>New comment</h1>

<table style="max-width=50%">
  <tr>
    <th>User</th>
    <th>Text</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td style="padding:10px;"><%= comment.user.name %></td>
    <td style="padding:10px;"><%= comment.text %></td>
  </tr>
<% end %>
</table>

<br />
<%= render 'form' %>

<%= link_to 'Back', comments_path %>
